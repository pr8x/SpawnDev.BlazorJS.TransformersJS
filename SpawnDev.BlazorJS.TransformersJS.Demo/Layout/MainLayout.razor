@inherits LayoutComponentBase

<PageTitle>@Title</PageTitle>

<SpawnDev.BlazorJS.TransformersJS.Demo.Layout.RadzenThemeContainer Theme="material-dark" />

<link rel="stylesheet" href="css/radzen-tweak.css" />

<RadzenComponents />
<RadzenLayout Style="grid-template-columns: auto 1fr auto; grid-template-areas: 'rz-header rz-header rz-header' 'rz-sidebar rz-body rz-right-sidebar'">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" JustifyContent="JustifyContent.SpaceBetween">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" JustifyContent="JustifyContent.Left">
                <RadzenSidebarToggle Style="margin: 0 0.5rem 0 0;" Click="@(() => leftSidebarExpanded = !leftSidebarExpanded)" />
                <RadzenLabel Text="@Title" />
            </RadzenStack>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" JustifyContent="JustifyContent.Right">
                <AppTrayArea></AppTrayArea>
                <RadzenSidebarToggle Style="@($"margin: 0; {(rightSidebarEnabled ? "" : "display: none;")}")" Click="@(() => rightSidebarExpanded = !rightSidebarExpanded)" />
            </RadzenStack>
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@leftSidebarExpanded" Responsive="true">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="" />
            <RadzenPanelMenuItem Text="2D to 2D+Z" Icon="tv" Path="DepthFrom2D" />
            <RadzenPanelMenuItem Text="2D to Anaglyph" Icon="3d_rotation" Path="AnaglyphImageDemo" />
            <RadzenPanelMenuItem Text="Image Enhancement" Icon="tune" Path="ImageToImage" />
            <RadzenPanelMenuItem Text="Text To Speech" Icon="3d_rotation" Path="TextToSpeechClient" />
            <RadzenPanelMenuItem Text="Keypoint Detection" Icon="grain" Path="KeypointDetectionDemo" />
            <RadzenPanelMenuItem Text="Realtime 2D to 2D+Z" Icon="grain" Path="RealTime2DZ" />
            <RadzenPanelMenuItem Text="Webcam 2D to 3D" Icon="grain" Path="RealTime2Dto3D" />
            <RadzenPanelMenuItem Text="Video 2D to 3D" Icon="grain" Path="RealTimeVideo2Dto3D" />
            

            <!-- <RadzenPanelMenuItem Text="Folder Convert" Icon="folder" Path="FolderConvert" /> -->


            <RadzenPanelMenuItem Text="GitHub Repo" Icon="code" Path="https://github.com/LostBeard/SpawnDev.BlazorJS.TransformersJS" Target="_blank" />
            <RadzenPanelMenuItem Text="Todd@SpawnDev.com" Icon="mail" Path="mailto:todd@spawndev.com" Target="_blank" />
        </RadzenPanelMenu>
        <div class="rz-p-4">
            <!-- Left Sidebar -->
        </div>
    </RadzenSidebar>
    <RadzenBody Style="width: auto; position: relative; padding: 0;">
        <div style="position: absolute; left: 0; top: 0; right: 0; bottom: 0;">
            @Body
        </div>
    </RadzenBody>
    <RadzenSidebar Responsive="false" @bind-Expanded="@rightSidebarExpanded" Style="grid-area: rz-right-sidebar">
        <div class="rz-p-4">
            <!-- Right Sidebar -->
        </div>
    </RadzenSidebar>
</RadzenLayout>